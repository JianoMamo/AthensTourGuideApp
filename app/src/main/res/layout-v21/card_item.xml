<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_athens_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp5"
        android:elevation="@dimen/dp3"
        app:cardCornerRadius="@dimen/dp8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/athens_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp160"
                android:layout_gravity="center"
                android:contentDescription="@string/image_place"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/acropolis" />

            <TextView
                android:id="@+id/athens_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/athens_image"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:text="@string/image_recycler_view"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/athens_location_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/athens_text"
                android:layout_marginTop="@dimen/dp10"
                android:drawableLeft="@drawable/ic_place_blue_24dp"
                android:drawablePadding="@dimen/dp10"
                android:drawableStart="@drawable/ic_place_blue_24dp"
                android:text="@string/address"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/athens_hours_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/athens_location_text_view"
                android:layout_marginTop="@dimen/dp10"
                android:drawableStart="@drawable/ic_access_time_blue_24dp"
                android:drawableLeft="@drawable/ic_access_time_blue_24dp"
                android:drawablePadding="@dimen/dp10"
                android:text="@string/operation_hours"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/athens_telephone_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/athens_hours_text_view"
                android:layout_marginTop="@dimen/dp10"
                android:drawableLeft="@drawable/ic_call_blue_24dp"
                android:drawablePadding="@dimen/dp10"
                android:drawableStart="@drawable/ic_call_blue_24dp"
                android:text="@string/phone_string"
                android:textColor="@color/black" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>